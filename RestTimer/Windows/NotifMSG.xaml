<Window x:Class="RestTimer.NotifMSG"
        x:Name="mySettings"
        xmlns:xrpb="http://XamlRadialProgressBar/DotNet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestTimer"
        mc:Ignorable="d"
        
        Title="RestTimer" Height="100" Width="350" AllowsTransparency="True" WindowStyle="None" Background="{x:Null}" Foreground="{x:Null}">
    <Border x:Name="BorderMain" BorderBrush="#5877E8" BorderThickness="2" Height="100" Width="350" CornerRadius="20" Background="White">
        <Grid>

            <TextBlock Text="Time to rest!" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="35" Margin="20 0 0 5" Foreground="Black"/>

            <Border x:Name="Rest" MouseLeftButtonUp="CloseNotificationWindow" Height="60" Width="100" Background="#5877E8" CornerRadius="5" Margin="0 0 20 0"  VerticalAlignment="Center" HorizontalAlignment="Right" >
                <TextBlock Text="Rest"  VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30" Foreground="Black"/>
            </Border>
 





        </Grid>
    </Border>
</Window>
